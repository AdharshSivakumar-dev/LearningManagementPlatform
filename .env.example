DJANGO_SECRET_KEY=change-this
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Prefer DATABASE_URL for unified config (used by dj-database-url)
DATABASE_URL=postgres://lms:lms@db:5432/lms

# JWT settings for FastAPI
JWT_SECRET=1234
JWT_EXPIRE_MIN=60

# Fallback discrete Postgres vars (if DATABASE_URL not set)
POSTGRES_DB=lms
POSTGRES_USER=lms
POSTGRES_PASSWORD=lms
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Email (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@example.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your_gmail_address@gmail.com
EMAIL_HOST_PASSWORD=your_gmail_app_password
